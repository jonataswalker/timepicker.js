{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "lib": ["es2022", "DOM", "DOM.Iterable"],

        "skipLibCheck": true,
        "useDefineForClassFields": true,

        "moduleResolution": "bundler",
        "isolatedModules": true,

        "strict": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["**/*.ts", "**/*.js", "**/.*.ts", "**/.*.js"]
}
